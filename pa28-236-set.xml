<?xml version="1.0"?>
<PropertyList>
	<sim include="Systems/views.xml">
		
		<!-- Basic Details -->
		<description>Piper Dakota</description>
		<aircraft-version>0.0.1</aircraft-version>
		<author>Kaleb Heitzman</author>
		<flight-model>yasim</flight-model>
		<aero>pa28-236</aero>
		
		<!-- Status and Rating -->
		<status>development</status>
		<rating>
			<FDM type="int">2</FDM>
			<systems type="int">1</systems>
			<cockpit type="int">0</cockpit>
			<model type="int">2</model>
		</rating>
		
		<!-- Splash Details -->
		<startup>
			<splash-texture>Aircraft/pa28-236/Splashes/splash.png</splash-texture>
			<splash-title>Piper Dakota</splash-title>
		</startup>
		
		<!-- Model Details -->
		<model>
			<path>Aircraft/pa28-236/Models/pa28-236.xml</path>
		</model>		
		
		<!-- Sound Details -->
		<sound>
			<path>Aircraft/pa28-236/pa28-236-sound.xml</path>
		</sound>
		
		<!-- Autopilot Details -->
		<!--autopilot>
			<path></path>
		</autopilot-->
		
		<!-- Flaps -->
		<flaps>
    	<setting>0.00</setting>
    	<setting>0.5</setting> <!-- 15 deg -->
    	<setting>1.00</setting> <!-- 30 deg -->
  	</flaps>

		<!-- Menubar -->
		<menubar include="Dialogs/pa28-236-menu.xml" />

		<!-- Weights -->
		<weight n="0">
	    <name>Pilot</name>
	    <weight-lb>170</weight-lb>
	    <max-lb>300</max-lb>
	  </weight>
	  <weight n="1">
	    <name>Copilot</name>
	    <weight-lb>0</weight-lb>
	    <max-lb>300</max-lb>
	  </weight>
	  <weight n="2">
	    <name>Left Passenger</name>
	    <weight-lb>0</weight-lb>
	    <max-lb>300</max-lb>
	  </weight>
	  <weight n="3">
	    <name>Right Passenger</name>
	    <weight-lb>0</weight-lb>
	    <max-lb>300</max-lb>
	  </weight>
	  <weight n="4">
	    <name>Baggage</name>
	    <weight-lb>200</weight-lb>
	    <max-lb>200</max-lb>
	  </weight>
		
	</sim>

	<instrumentation>
		<kma20 include="Aircraft/Instruments-3d/kma20/kma20init.xml" />
	</instrumentation>

	<nasal>
	  <pa28>
	    <file>Aircraft/pa28-161/Nasal/pa28.nas</file>
	  </pa28>
	  <kap140>
	    <file>Aircraft/Generic/kap140.nas</file>
	  </kap140>
	</nasal>

	<input>

  <keyboard>
   <key n="102">
   <name>f</name>
   <desc>fuel tank select</desc>
   <binding>
    <command>nasal</command>
     <script>pa28.fuel_switch()</script>
   </binding>
   </key>
   
  <key n="126">
  <name>~</name>
  <desc>Toggle Nav Lights</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.nav_light_switch()</script>
  </binding>
  </key> 

  <key n="33">
  <name>!</name>
  <desc>Toggle Battery Switch</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.battery_switch()</script>
  </binding>
  </key> 

  <key n="64">
  <name>@</name>
  <desc>Toggle Alternator Switch</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.alternator_switch()</script>
  </binding>
  </key> 

  <key n="35">
  <name>#</name>
  <desc>Toggle Fuel Pump</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.f_pump_switch()</script>
  </binding>
  </key> 

  <key n="36">
  <name>$</name>
  <desc>Toggle Landing Light</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.landing_light_switch()</script>
  </binding>
  </key> 

  <key n="37">
  <name>%</name>
  <desc>Toggle Fin Anti CLL Lights</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.fin_strobe_light_switch()</script>
  </binding>
  </key>

  <key n="94">
  <name>^</name>
  <desc>Toggle Wing Anti CLL Lights</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.wing_strobe_light_switch()</script>
  </binding>
  </key>

  <key n="42">
  <name>*</name>
  <desc>Toggle Pitot Heat</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.pitot_heat_switch()</script>
  </binding>
  </key> 

  <key n="40">
  <name>(</name>
  <desc>Increase Panel Lights</desc>
  <repeatable>true</repeatable>
  <binding>
   <command>nasal</command>
   <script>pa28.panel_light_switch(1)</script>
  </binding>
  </key> 

  <!--key n="57">
  <name>9</name>
  <desc>Decrease Panel Lights</desc>
  <repeatable>true</repeatable>
  <binding>
   <command>nasal</command>
   <script>pa28.panel_light_switch(-1)</script>
  </binding>
  </key--> 

  <key n="104">
  <name>h</name>
  <desc>Toggle Carb Heat</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.carb_heat()</script>
  </binding>
  </key> 

  <key n="16">
  <name>ctrl-P</name>
  <desc>Toggle Prime Pump</desc>
  <binding>
   <command>nasal</command>
   <script>pa28.primer()</script>
  </binding>
  </key> 

  <key n="115">
  <name>s</name>
  <desc>Toggle Starter Switch</desc>
   <binding>
     <command>property-assign</command>
     <property>/controls/switches/starter</property>
     <value >1</value>
   </binding>
   <mod-up>
     <binding>
       <command>property-assign</command>
       <property>/controls/switches/starter</property>
       <value>0</value>
     </binding>
   </mod-up>
  </key>

</keyboard> 

</input>
	
</PropertyList>