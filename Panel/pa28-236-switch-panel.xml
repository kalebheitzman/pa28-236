 <animation>
   <type>rotate</type>
   <object-name>AntiCollLight.Wing</object-name>
   <property>controls/switches/strobe-lights</property>
   <factor>30</factor>
   <axis>
     <x>0.0</x>
     <y>-1.0</y>
     <z>0.0</z>
   </axis>
