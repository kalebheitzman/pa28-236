 <animation>
  <type>rotate</type>
  <object-name>PitotHeat</object-name>
  <property>controls/anti-ice/pitot-heat</property>
  <factor>30</factor>
  <axis>
   <x>0.0</x>
   <y>-1.0</y>
   <z>0.0</z>
  </axis>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>-0.0</z-m>
  </center>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>PanelDimmer</object-name>
   <property>controls/switches/panel-lights-factor</property>
   <factor>70</factor>
   <axis>
     <x>0.0</x>
     <y>1.0</y>
     <z>0.0</z>
   </axis>
   <center>
     <x-m>-0.00578</x-m>
     <y-m>0.00</y-m>
     <z-m>-0.0</z-m>
   </center>
 </animation>
  
</PropertyList>