<?xml version="1.0"?>
<PropertyList>

	<path>pa28-236.ac</path>

	<specular>
    <red-prop>specular/red</red-prop>
    <green-prop>specular/green</green-prop>
    <blue-prop>specular/blue</blue-prop>
  </specular>

  <emission>
    <red-prop>emission/red</red-prop>
    <green-prop>emission/green</green-prop>
    <blue-prop>emission/blue</blue-prop>
  </emission>

	<!-- Cockpit -->
	<!--model>
		<name>interior</name>
		<path>Aircraft/pa28-236/Models/pa28-236-intererior.ac</path>
		<offsets>
			<x-m>  0.00 </x-m>
			<y-m>  0.00 </y-m>
			<z-m>  0.00 </z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model-->

	<!-- Propeller -->
	<animation>
		<type>spin</type>
		<object-name>propeller</object-name>
		<property>engines/engine[0]/rpm</property>
		<center>
			<x-m>-0.07502</x-m>
			<y-m>-0.04015</y-m>
			<z-m>-0.04914</z-m>
		</center>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	
	<!-- Ailerons -->
	<animation>
    <type>rotate</type>
    <object-name>left-aileron</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep>  15 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0 </dep></entry>
      <entry><ind>  0.75 </ind><dep> -10 </dep></entry>
    </interpolation>
    <axis>
      <x1-m>  2.79 </x1-m>
      <y1-m> -5.10 </y1-m>
      <z1-m>  0.03 </z1-m>
      <x2-m>  2.99 </x2-m>
      <y2-m> -2.56 </y2-m>
      <z2-m> -0.30 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>right-aileron</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep> -10 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0 </dep></entry>
      <entry><ind>  0.75 </ind><dep>  15 </dep></entry>
    </interpolation>
    <axis>
      <x1-m>  2.99 </x1-m>
      <y1-m>  2.56 </y1-m>
      <z1-m> -0.30 </z1-m>
      <x2-m>  2.79 </x2-m>
      <y2-m>  5.10 </y2-m>
      <z2-m>  0.03 </z2-m>
    </axis>
  </animation>

	<!-- Flaps -->
	<animation>
    <type>rotate</type>
    <object-name>left-flap</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> -20 </factor>
    <axis>
    	<x1-m>  3.05 </x1-m>
      <y1-m> -0.58 </y1-m>
      <z1-m> -0.62 </z1-m>
      <x2-m>  3.06 </x2-m>
      <y2-m> -2.56 </y2-m>
      <z2-m> -0.38 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>right-flap</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> -20 </factor>
    <axis>
      <x1-m>  3.06 </x1-m>
      <y1-m>  2.56 </y1-m>
      <z1-m> -0.38 </z1-m>
      <x2-m>  3.05 </x2-m>
      <y2-m>  0.58 </y2-m>
      <z2-m> -0.62 </z2-m>
    </axis>
  </animation>

	<!-- Elevator -->
  <animation>
   	<type>rotate</type>
    <object-name>elevator</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep> -12.0 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0.0 </dep></entry>
      <entry><ind>  0.75 </ind><dep>   9.5 </dep></entry>
    </interpolation>
    <center>
      <x-m> 6.30 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.05 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Elevator Trim -->
  <animation>
   	<type>rotate</type>
    <object-name>trim</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep> -12.0 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0.0 </dep></entry>
      <entry><ind>  0.75 </ind><dep>   9.5 </dep></entry>
    </interpolation>
    <center>
      <x-m> 6.30 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.05 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Rudder -->
  <animation>
    <type>rotate</type>
    <object-name>rudder</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep> -25 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0 </dep></entry>
      <entry><ind>  0.75 </ind><dep>  25 </dep></entry>
    </interpolation>
    <axis>
      <x1-m>  6.765 </x1-m>
      <y1-m>  0.014 </y1-m>
      <z1-m>  1.561 </z1-m>
      <x2-m>  6.373 </x2-m>
      <y2-m>  0.014 </y2-m>
      <z2-m>  0.239 </z2-m>
    </axis>
  </animation>

  <!-- Panel -->
	<model>
		<name>panel</name>
		<path>Aircraft/pa28-236/Models/pa28-236-panel.xml</path>
		<offsets>
			<x-m>  1.13 </x-m>
			<y-m> -0.07 </y-m>
			<z-m> -0.23 </z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>
					
</PropertyList>