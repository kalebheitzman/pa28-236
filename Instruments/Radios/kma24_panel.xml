<?xml version="1.0"?>

<!-- KMA-24 Audio Panel Hotspots -->
<!-- Gary R. Neely 'Buckaroo', 2011 -->


<PropertyList>

<name>Main Panel</name>
<background>Aircraft/Velocity-XL-RG/Panels/transparent-bg.rgb</background>
<w>96</w>
<h>32</h>

<instruments>

  <instrument>
    <name>panel hotspots</name>
    <x>48</x>
    <y>16</y>
    <w>96</w>
    <h>32</h>
    <w-base>96</w-base>
    <h-base>32</h-base>

    <actions>

      <action>
        <name>KMA24_PowerInc</name>
        <button>0</button>
        <x>33</x>
        <y>-9</y>
        <w>10</w>
        <h>18</h>
        <binding>
          <command>property-adjust</command>
          <property>/controls/switches/kma-24</property>
          <step>1</step>
          <min>0</min>
          <max>5</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
        <name>KMA24_PowerDec</name>
        <button>1</button>
        <x>33</x>
        <y>-9</y>
        <w>10</w>
        <h>18</h>
        <binding>
          <command>property-adjust</command>
          <property>/controls/switches/kma-24</property>
          <step>-1</step>
          <min>0</min>
          <max>5</max>
          <wrap>false</wrap>
        </binding>
      </action>

      <action>
        <name>Test</name>
        <button>0</button>
        <x>-38</x>
        <y>5</y>
        <w>5</w>
        <h>5</h>
        <binding>
          <command>property-toggle</command>
          <property>/instrumentation/audio-panel/test</property>
        </binding>
      </action>

      <action>
        <name>Mkr</name>
        <button>0</button>
        <x>11</x>
        <y>-11</y>
        <w>4</w>
        <h>8</h>
        <binding>
          <command>property-toggle</command>
          <property>/instrumentation/marker-beacon/serviceable</property>
        </binding>
      </action>


    </actions>

  </instrument>

</instruments>

</PropertyList>


