<animation>
  <type>rotate</type>
  <object-name>KnobOn</object-name>
  <property>/controls/switches/kx-155-1</property>
  <interpolation>
    <entry><ind>0</ind><dep>-120</dep></entry>
    <entry><ind>1</ind><dep> 120</dep></entry>
  </interpolation>
  <center>
    <x-m>0</x-m>
    <y-m>-0.062</y-m>
    <z-m>-0.016</z-m>
  </center>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

