<?xml version="1.0"?>

<!-- KX-155 NavComm Hotspots -->
<!-- Gary R. Neely 'Buckaroo', 2010 -->


<PropertyList>

<name>Main Panel</name>
<background>Aircraft/Velocity-XL-RG/Panels/transparent-bg.rgb</background>
<w>96</w>
<h>32</h>

<instruments>

  <instrument>
    <name>panel hotspots</name>
    <x>48</x>
    <y>16</y>
    <w>96</w>
    <h>32</h>
    <w-base>96</w-base>
    <h-base>32</h-base>

    <actions>

      <action>
        <name>KX155Power</name>
        <button>0</button>
        <x>-41</x>
        <y>-14</y>
        <w>7</w>
        <h>7</h>
        <binding>
          <command>property-toggle</command>
          <property>/controls/switches/kx-155-2</property>
        </binding>
      </action>

      <action>
        <name>KX155Ident</name>
        <button>0</button>
        <x>7</x>
        <y>-14</y>
        <w>7</w>
        <h>7</h>
        <binding>
          <command>property-toggle</command>
          <property>/controls/switches/kx-155-2-ident</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/instrumentation/nav[1]/ident</property>
        </binding>
      </action>

      <action>
        <name>CommTFR</name>
        <button>0</button>
        <x>-32</x>
        <y>-6</y>
        <w>8</w>
        <h>8</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-swap</command>
          <property>/instrumentation/comm[1]/frequencies/selected-mhz</property>
          <property>/instrumentation/comm[1]/frequencies/standby-mhz</property>
        </binding>
      </action>

      <action>
        <name>NavTFR</name>
        <button>0</button>
        <x>17</x>
        <y>-6</y>
        <w>8</w>
        <h>8</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-swap</command>
          <property>/instrumentation/nav[1]/frequencies/selected-mhz</property>
          <property>/instrumentation/nav[1]/frequencies/standby-mhz</property>
        </binding>
      </action>

      <action>
        <name>CommInc</name>
        <button>0</button>
        <x>-22</x>
        <y>-12</y>
        <w>10</w>
        <h>10</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/comm[1]/frequencies/selected-mhz</property>
          <step>1</step>
          <min>118</min>
          <max>136</max>
          <wrap>true</wrap>
        </binding>
      </action>
      <action>
        <name>CommDec</name>
        <button>1</button>
        <x>-22</x>
        <y>-12</y>
        <w>10</w>
        <h>10</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/comm[1]/frequencies/selected-mhz</property>
          <step>-1</step>
          <min>118</min>
          <max>136</max>
          <wrap>true</wrap>
        </binding>
      </action>
      <action>
        <name>CommSmInc</name>
        <button>0</button>
        <x>-12</x>
        <y>-12</y>
        <w>10</w>
        <h>10</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/comm[1]/frequencies/selected-mhz</property>
          <step>0.01</step>
          <min>118</min>
          <max>136</max>
          <wrap>true</wrap>
        </binding>
      </action>
      <action>
        <name>CommSmDec</name>
        <button>1</button>
        <x>-12</x>
        <y>-12</y>
        <w>10</w>
        <h>10</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/comm[1]/frequencies/selected-mhz</property>
          <step>-0.01</step>
          <min>118</min>
          <max>136</max>
          <wrap>true</wrap>
        </binding>
      </action>

      <action>
        <name>NavInc</name>
        <button>0</button>
        <x>27</x>
        <y>-12</y>
        <w>10</w>
        <h>10</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/nav[1]/frequencies/selected-mhz</property>
          <step>1</step>
          <min>108</min>
          <max>117.95</max>
          <wrap>true</wrap>
        </binding>
      </action>
      <action>
        <name>NavDec</name>
        <button>1</button>
        <x>27</x>
        <y>-12</y>
        <w>10</w>
        <h>10</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/nav[1]/frequencies/selected-mhz</property>
          <step>-1</step>
          <min>108</min>
          <max>117.95</max>
          <wrap>true</wrap>
        </binding>
      </action>
      <action>
        <name>NavSmInc</name>
        <button>0</button>
        <x>37</x>
        <y>-12</y>
        <w>10</w>
        <h>10</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/nav[1]/frequencies/selected-mhz</property>
          <step>0.01</step>
          <min>108</min>
          <max>117.95</max>
          <wrap>true</wrap>
        </binding>
      </action>
      <action>
        <name>NavSmDec</name>
        <button>1</button>
        <x>37</x>
        <y>-12</y>
        <w>10</w>
        <h>10</h>
        <binding>
          <condition>
            <property>/systems/electrical/outputs/kx-155-2</property>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/nav[1]/frequencies/selected-mhz</property>
          <step>-0.01</step>
          <min>108</min>
          <max>117.95</max>
          <wrap>true</wrap>
        </binding>
      </action>

    </actions>

  </instrument>

</instruments>

</PropertyList>


